@page
@model StudentsEducation.Web.Areas.Account.Pages.RoleIdentificationModel
@{
    ViewData["Title"] = "RoleIdentification";
}

<h1>Роль установленна</h1>

<h2>@Model.Role</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="InpTeacher.Name" class="control-label"></label>
        <input asp-for="InpTeacher.Name" class="form-control" />
        <span asp-validation-for="InpTeacher.Name" class="text-danger"></span>
    </div>
    <input asp-for="InpTeacher.Id" type="hidden"/>
    <div class="form-group">
        <input formmethod="post" type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

