@page
@model StudentsEducation.Web.Areas.Admin.Pages.Students.Marks.IndexModel

@{
    ViewData["Title"] = "Оценки";
}

<h1>Оценки</h1>
<h6>Студент: @Model.Student.Name | Номер зачетной книжки: @Model.Student.GradeBookNumber</h6>
<p>
    <a asp-page="Create" asp-route-id="@Model.Student.Id">Добавить оценку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marks.First().MarkValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks.First().DateAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks.First().DateToPass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks.First().WasCorrected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks.First().Work)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Marks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MarkValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateToPass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WasCorrected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Work.Name) @Html.DisplayFor(modelItem => item.Work.Subject.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
