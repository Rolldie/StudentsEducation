            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Mark) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MarkValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateToPass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WasModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.GradeBookNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Work.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
