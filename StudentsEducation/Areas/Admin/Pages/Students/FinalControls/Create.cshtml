@page
@model StudentsEducation.Web.Areas.Admin.Pages.Students.FinalControls.CreateModel

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление</h1>

<h4>Итоговая оценка для студента: @Model.Student.Name, зачетная книжка: @Model.Student.GradeBookNumber </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FinalControl.MarkValue" class="control-label"></label>
                <input asp-for="FinalControl.MarkValue" class="form-control" />
                <span asp-validation-for="FinalControl.MarkValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalControl.Date" class="control-label"></label>
                <input asp-for="FinalControl.Date" class="form-control" />
                <span asp-validation-for="FinalControl.Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FinalControl.WasModified" /> @Html.DisplayNameFor(model => model.FinalControl.WasModified)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FinalControl.ScheduleId" class="control-label"></label>
                <select asp-for="FinalControl.ScheduleId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <input asp-for="FinalControl.StudentId" type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@Model.FinalControl.StudentId">Вернуться к списку итоговых оценок</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
