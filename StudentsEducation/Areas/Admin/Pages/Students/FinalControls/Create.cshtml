@page
@model StudentsEducation.Web.Areas.Admin.Pages.Students.FinalControls.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FinalControl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FinalControl.MarkValue" class="control-label"></label>
                <input asp-for="FinalControl.MarkValue" class="form-control" />
                <span asp-validation-for="FinalControl.MarkValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalControl.Date" class="control-label"></label>
                <input asp-for="FinalControl.Date" class="form-control" />
                <span asp-validation-for="FinalControl.Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FinalControl.WasModified" /> @Html.DisplayNameFor(model => model.FinalControl.WasModified)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FinalControl.SubjectId" class="control-label"></label>
                <select asp-for="FinalControl.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FinalControl.StudentId" class="control-label"></label>
                <select asp-for="FinalControl.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
