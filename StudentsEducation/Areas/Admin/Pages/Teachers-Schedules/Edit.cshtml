@page
@model StudentsEducation.Web.Areas.Admin.Pages.Teachers_Schedules.EditModel

@{
    ViewData["Title"] = "Изменение преподавателя";
}

<h1>Изменение</h1>

<h4>Преподаватель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Teacher.Name" class="control-label"></label>
                <input asp-for="Teacher.Name" class="form-control" />
                <span asp-validation-for="Teacher.Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Teacher.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        @(await Html.RenderComponentAsync<SchedulesList>(RenderMode.ServerPrerendered,new { TeacherId = Model.Teacher.Id }))
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку Преподавателей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
