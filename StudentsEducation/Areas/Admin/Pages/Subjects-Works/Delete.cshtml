@page
@model StudentsEducation.Web.Areas.Admin.Pages.Subjects_Works.DeleteModel

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>
<h3>Вы действительно хотите удалить предметы и работы?</h3>
<div class="row">
    <div class="col-md-6 border-right">
        <h4>Предмет</h4>
        <hr />
        <dl class="col-md-12">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Subject.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Subject.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Subject.ControlType.ControlName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Subject.ControlType.ControlName)
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Subject.Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-page="./Index">Вернуться к списку Предметов</a>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Работы</h4>
        <hr />
        @(await Html.RenderComponentAsync<WorksList>(RenderMode.ServerPrerendered, new { SubjectId = Model.Subject.Id, Editable = true }))
    </div>
</div>



