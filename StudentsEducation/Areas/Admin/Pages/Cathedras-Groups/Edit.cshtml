@page
@model StudentsEducation.Web.Areas.Admin.Pages.Cathedras_Groups.EditModel
@using System.Net.Http
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Кафедра</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cathedra.Name" class="control-label"></label>
                <input asp-for="Cathedra.Name" class="form-control" />
                <span asp-validation-for="Cathedra.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cathedra.MainPhoneNumber" class="control-label"></label>
                <input asp-for="Cathedra.MainPhoneNumber" class="form-control" />
                <span asp-validation-for="Cathedra.MainPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cathedra.SecondPhoneNumber" class="control-label"></label>
                <input asp-for="Cathedra.SecondPhoneNumber" class="form-control" />
                <span asp-validation-for="Cathedra.SecondPhoneNumber" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Cathedra.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить информацию про кафедру" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-5">
        @(await Html.RenderComponentAsync<StudentsEducation.Web.Components.GroupList>(RenderMode.ServerPrerendered, 
        new { CathedraId = Model.Cathedra.Id, Editable = true }))
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку Кафедр</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
