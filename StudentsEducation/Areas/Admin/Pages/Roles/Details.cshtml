@page
@model StudentsEducation.Web.Areas.Admin.Pages.Roles.DetailsModel

@{
    ViewData["Title"] = "Информация";
}

<h1>Информация</h1>


<div class="row">
    <h4 class="col-md-6">Роль</h4>
    <h4 class="col-md-6">Пользователи</h4>
</div>
    <hr />
    <div class="row">
        <dl class="col-md-6">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Role.Name)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Role.NormalizedName)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.Role.NormalizedName)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Role.ConcurrencyStamp)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.Role.ConcurrencyStamp)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Role.Description)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.Role.Description)
            </dd>
        </dl>
        <div class="col-md-6">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Users.ToList()[0].UserName)</td>
                        <td>
                            @Html.DisplayNameFor(model => model.Users.ToList()[0].Id)
                        </td>
                    </tr>
                </thead>
                <tbody class="table-bordered">
                    @foreach (var elem in Model.Users)
                    {
                        <tr>
                            <td>
                                @elem.UserName
                            </td>
                            <td>
                                @elem.Id
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        


    <a asp-page="./Edit" asp-route-id="@Model.Role.Id">Изменить</a> |
    <a asp-page="./Index">Вернуться к списку Ролей</a>
        
