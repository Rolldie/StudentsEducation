@page
@model StudentsEducation.Web.Areas.Admin.Pages.Roles.IndexModel

@{
    ViewData["Title"] = "Роли";
}

<h1>Роли</h1>

<p>
    <a asp-page="Create">Добавить роль</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].ConcurrencyStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Description)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Role) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Информация</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
