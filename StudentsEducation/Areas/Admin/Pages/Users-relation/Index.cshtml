@page
@model StudentsEducation.Web.Areas.Admin.Pages.Users_relation.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Пользователи</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Имя пользователя (логин)
            </th>
            <th>
                Ключ в БД
            </th>
            <th>
                Роль
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model.OutUsers)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.DbId</td>
                <td>@user.Role</td>
                <td><a asp-page="./Edit" asp-route-id="@user.Id">Редактировать</a> |
                    <form method="post"> <input asp-route-id="@user.Id" type="submit"  value="Удалить"></form>
                </td>
            </tr>
        }
    </tbody>
</table>

