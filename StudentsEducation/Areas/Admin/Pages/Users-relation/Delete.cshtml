@page
@model StudentsEducation.Web.Areas.Admin.Pages.Users_relation.DeleteModel
@{
    ViewData["Title"] = "Удаление";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы действительно хотите удалить эту учетную запись?</h3>
<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Email)
        </dd>
        @if (Model.Teacher != null)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.DbId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.DbId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Teacher.Name)
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AppUser.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку пользователей</a>
    </form>
</div>