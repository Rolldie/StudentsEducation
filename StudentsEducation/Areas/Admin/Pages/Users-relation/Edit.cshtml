@page
@model StudentsEducation.Web.Areas.Admin.Pages.Users_relation.EditModel
@{
    ViewData["Title"] = "Изменение пользователя";
}

<h1>Редактирование данных</h1>
<h2>Пользователь</h2>
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppUser.UserName" class="control-label"></label>
                <input asp-for="AppUser.UserName" class="form-control" />
                <span asp-validation-for="AppUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label"></label>
                <input asp-for="AppUser.Email" class="form-control" />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.DbId" class="control-label"></label>
                <input asp-for="AppUser.DbId" class="form-control" />
                <span asp-validation-for="AppUser.DbId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AppUser.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить информацию про пользователя" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>